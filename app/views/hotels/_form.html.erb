<%= form_for(hotel) do |f| %>
  <% if hotel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul>
        <% hotel.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <h2> Room Categories </h2>

  <%= f.nested_fields_for :room_categories do |room_category| %>
    <div class="room_category_field">
      <div class="field">
        <%= room_category.label :name %>
        <%= room_category.text_field :name %>
        <%= room_category.remove_nested_fields_link 'Remove Me'%>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.add_nested_fields_link :room_categories %>
  </div>
  <div class="actions">
    <%= f.remove_nested_fields_link :room_categories %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
